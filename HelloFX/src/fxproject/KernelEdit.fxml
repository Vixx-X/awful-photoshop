<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="kernelPane" prefHeight="573.0" prefWidth="764.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxproject.KernelEditController">
   <top>
      <VBox prefHeight="59.0" prefWidth="764.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_LEFT" prefHeight="27.0" prefWidth="757.0" style="&#10;" text="Seleccione la cantidad de filas y columnas de su Kernel" textFill="#9f9f9f" wrapText="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox prefHeight="20.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="rows" onAction="#createGridPane" prefHeight="25.0" prefWidth="61.0" />
                  <TextField fx:id="columns" onAction="#createGridPane" prefHeight="25.0" prefWidth="61.0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </top>
   <bottom>
      <Button mnemonicParsing="false" onAction="#applyKernel" text="Aplicar" BorderPane.alignment="BOTTOM_RIGHT">
         <BorderPane.margin>
            <Insets bottom="20.0" right="20.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
